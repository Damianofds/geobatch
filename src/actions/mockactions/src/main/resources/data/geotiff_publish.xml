<?xml version="1.0" encoding="UTF-8"?>
<FlowConfiguration>
	<id>mock_flow</id>
	<name>Mock flow</name>
	<description>A mock flow useful for testing pourpose</description>

	<autorun>true</autorun>

	<corePoolSize>10</corePoolSize>
	<maximumPoolSize>30</maximumPoolSize>
	<keepAliveTime>15</keepAliveTime> <!--seconds -->
	<workQueueSize>100</workQueueSize>

	<EventGeneratorConfiguration>
		<wildCard>*.*</wildCard>
		<watchDirectory>mock/in</watchDirectory>
		<osType>OS_UNDEFINED</osType>
		<eventType>FILE_ADDED</eventType>
		<serviceID>fsEventGeneratorService</serviceID>
	</EventGeneratorConfiguration>

	<EventConsumerConfiguration>
		<id>mock_flow_consumer</id>
		
		<listenerId>Mock1ConsumerLogger0</listenerId>
		<listenerId>Mock1Cumulator0</listenerId>
		
		<Mock1Configuration>
			<id>Mock1</id>
			<description>Action Mock1</description>
			<name>Action Mock1</name>

			<listenerId>GeoTIFFStatusActionLogger0</listenerId>
			<listenerId>GeoTIFFActionLogger0</listenerId>
			<mockField>mockValue1</mockField>
		</Mock1Configuration>
		
		<Mock1Configuration>
			<id>Mock2</id>
			<description>Action Mock2</description>
			<name>Action Mock2</name>

			<listenerId>GeoTIFFStatusActionLogger0</listenerId>
			<listenerId>GeoTIFFActionLogger0</listenerId>
			<mockField>mockValue2</mockField>
		</Mock1Configuration>
	</EventConsumerConfiguration>

	<ListenerConfigurations>
		<StatusProgressListener>
			<serviceID>statusListenerService</serviceID>
			<id>GeoTIFFStatusActionLogger0</id>
		</StatusProgressListener>

		<LoggingProgressListener>
			<serviceID>loggingListenerService</serviceID>
			<id>GeoTIFFActionLogger0</id>
			<loggerName>GeoTIFFActionLogger0</loggerName>
		</LoggingProgressListener>

		<LoggingProgressListener>
			<serviceID>loggingListenerService</serviceID>
			<id>Mock1ConsumerLogger0</id>
			<loggerName>Mock1ConsumerLogger0</loggerName>
		</LoggingProgressListener>

		<CumulatingProgressListener>
			<serviceID>cumulatingListenerService</serviceID>
			<id>Mock1Cumulator0</id>
		</CumulatingProgressListener>
	</ListenerConfigurations>
	
</FlowConfiguration>
